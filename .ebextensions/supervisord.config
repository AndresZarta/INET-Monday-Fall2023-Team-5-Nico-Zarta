files:
  "/etc/supervisord.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      [supervisord]
      nodaemon=true

      [program:daphne]
      command=daphne -p 8001 roleplaydate.asgi:application
      autostart=true
      autorestart=true

commands:
  01_install_supervisor:
    command: "pip install supervisor"
  02_start_supervisord:
    command: "supervisord -c /etc/supervisord.conf"
