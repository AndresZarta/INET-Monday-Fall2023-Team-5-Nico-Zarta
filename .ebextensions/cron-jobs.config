files:
  "/etc/cron.d/reset_likes_cron":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Runs the Django management command at 11:43 AM UTC which corresponds to 7:43 AM EDT
      43 11 * * * root . /opt/elasticbeanstalk/deployment/envvars.yml && . /var/app/venv/staging-LQM1lest/bin/activate && /var/app/venv/staging-LQM1lest/bin/python /var/app/current/manage.py reset_likes >> /var/log/reset_likes.log 2>&1
commands:
  remove_old_cron_job:
    command: "rm -f /etc/cron.d/reset_likes_cron.bak"
  01_reload_write_env_script:
    command: "chmod 755 /opt/elasticbeanstalk/hooks/appdeploy/post/write_env.sh"
