files:
  "/etc/cron.d/reset_likes_cron":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Runs the Django management command at 7:21 AM EDT which is 11:21 AM UTC
      34 11 * * * root env > /tmp/env_output.txt && . /var/app/venv/staging-LQM1lest/bin/activate && /var/app/venv/staging-LQM1lest/bin/python /var/app/current/manage.py reset_likes >> /var/log/reset_likes.log 2>&1
commands:
  remove_old_cron_job:
    command: "rm -f /etc/cron.d/reset_likes_cron.bak"
