option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "roleplaydate.settings"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    WSGIPath: roleplaydate.wsgi:application
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static

commands:
  01_create_envvars_sh:
    command: "jq -r 'to_entries | .[] | \"export \" + .key + \"=''' + .value + \"'\"' /opt/elasticbeanstalk/deployment/envvars.json > /opt/elasticbeanstalk/deployment/envvars.sh"
    test: "test -f /opt/elasticbeanstalk/deployment/envvars.json && test ! -f /opt/elasticbeanstalk/deployment/envvars.sh"
    leader_only: true

