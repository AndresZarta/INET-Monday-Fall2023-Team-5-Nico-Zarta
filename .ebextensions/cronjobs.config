files:
  "/etc/cron.d/mycronjob":
    mode: "000644"
    owner: root
    group: root
    content: |
      12 18 * * * root /bin/bash -c 'cd /var/app/current && /var/app/venv/staging-LQM1lest/bin/python manage.py reset_likes --dbname rpthendatedatabase' >> /var/log/reset_likes.log 2>&1

commands:
  remove_old_cron_job:
    command: "rm -f /etc/cron.d/mycronjob.bak"

services:
  sysvinit:
    crond:
      enabled: true
      ensureRunning: true
